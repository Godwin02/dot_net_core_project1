
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SecondPage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .table {
            width: 100%;
            height: max-content;
            background-color:black;
        }

            .table th {
                border: 1px solid antiquewhite;
                color: antiquewhite;
            }

            .table td {
                border: 1px solid antiquewhite;
                color: antiquewhite;
                font-weight: bolder;
            }

        .button{
            text-decoration:none;
            border:1px solid red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light" style="background-color: rgb(5, 30, 98); position: sticky; width: 100%;">
        <div class="container-fluid">
            <a href='/' class="navbar-brand"><img src="https://articles-images.sftcdn.net/wp-content/uploads/sites/3/2018/03/amazon.png" alt="Avatar Logo" style="width:40px;" class="rounded-pill">  </a>
            <form class="d-flex">
                <div class="nav-link text-warning me-1" style="color:yellow;">@Html.ActionLink("Add Product", "FirstPage", "First")</div>
                <div class="nav-link  me-1" style="color:yellow;">@Html.ActionLink("Remove Product", "SecondPage", "First")</div>
                <div class="nav-link  me-1" style="color:yellow;">@Html.ActionLink("View Product", "ThirdPage", "First")</div>
            </form>
        </div>
    </nav>
    <table class="table">
        @model IEnumerable<dot_net_core_project1.Models.Product>

        <thead>
            <tr>
                <th>PRODUCT ID</th>
                <th>PRDUCT NAME</th>
                <th>PRICE</th>
                <th>STOCK</th>
                <th>DELETE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.productId</td>
                    <td>@data.productName</td>
                    <td>@data.productPrice</td>
                    <td>@Html.DisplayFor(mbox=>data.productStock)</td>
                    <td><button class="btn btn-danger">@Html.ActionLink("Delete","deleteProduct","First",new{pid =  data.productId})</button></td>
                </tr>
            }
           
        </tbody>
    </table>
</body>
</html>
